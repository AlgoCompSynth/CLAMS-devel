echo "Setting environment variables"

# Organize directories in $HOME
export PROJECTS=$HOME/Projects; mkdir --parents $PROJECTS
export LOGFILES=$HOME/Logfiles; mkdir --parents $LOGFILES
export LOCALBIN=$HOME/.local/bin; mkdir --parents $LOCALBIN

## c4
export C4_URL="https://github.com/CCurl/c4.git"
export C4_PATH="$PROJECTS/c4"

# AMY
export AMY_URL="--branch 1.1.4 https://github.com/shorepine/amy.git"
export AMY_PATH="$PROJECTS/amy"
